{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "resources/js/**/*", "resources/js/**/*.vue"],
  "exclude": ["resources/js/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./resources/js/*"],
      "appdata": ["./resources/js/app-data.ts"],
      "types": ["./resources/js/types/index.d.ts"],
      "Component/*": ["./resources/js/components/*"],
      "Store/*": ["./resources/js/stores/*"],
      "Use/*": ["./resources/js/composables/*"],
      "View/*": ["./resources/js/views/*"]
    }
  }
}
