{
  "name": "auth",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "npm run type-check && npm run build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "tsc --noEmit",
    "lint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "format": "prettier --write resources/js/**/*.{ts,tsx,js,jsx}"
  },
  "dependencies": {
    "alpinejs": "^3.14.9",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^24.3.0",
    "oxlint": "^1.14.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "spanvel-vite-plugin": "^0.1.0",
    "typescript": "~5.8.0",
    "vite": "npm:rolldown-vite@latest"
  }
}
